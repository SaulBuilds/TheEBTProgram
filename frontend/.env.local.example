# Privy Configuration (client-side)
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id

# Privy Configuration (server-side for API routes)
PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret

# Admin token for protected routes
ADMIN_TOKEN=your-secure-admin-token

# Database Configuration (Vercel Postgres)
# These are auto-populated when you connect Vercel Postgres in the dashboard
DATABASE_URL=postgres://...
DIRECT_URL=postgres://...

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Contract Addresses
NEXT_PUBLIC_EBT_PROGRAM_ADDRESS=0x...
NEXT_PUBLIC_FOOD_STAMPS_ADDRESS=0x...
NEXT_PUBLIC_ERC6551_REGISTRY_ADDRESS=0x...
NEXT_PUBLIC_MONTHLY_DISTRIBUTOR_ADDRESS=0x...

# Features
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Optional: Development bypass for Privy auth
# PRIVY_BYPASS=true

# ============================================
# IPFS / NFT Card Generation Configuration
# ============================================

# IPFS Node API endpoint
# Local: http://localhost:5001
# Production: Your hosted IPFS node URL (e.g., https://ipfs.yourdomain.com:5001)
IPFS_NODE_URL=http://localhost:5001

# IPFS Gateway for serving images (public, used client-side)
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/

# App URL for metadata external_url field
NEXT_PUBLIC_APP_URL=https://web3welfare.com